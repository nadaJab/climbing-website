<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<package name="default" extends="struts-default">

		<!-- Action par dÃ©faut -->
		<default-action-ref name="home" />

		<!-- Action "index" -->
		<action name="home" class="HomeAction">
			<result>/jsp/home.jsp</result>
		</action>

		<!-- Action "inscription" -->
		<action name="inscription" class="org.climbing.action.HomeAction" method="input">
			<result name="input">/jsp/inscription.jsp</result>
		</action>

		<action name="save" class="org.climbing.action.InscriptionAction">
			<result name="input">/jsp/inscription.jsp</result>
			<result name="success">/jsp/thankYou.jsp</result>
		</action>


		<!-- Action "Ajout d'un topo" -->
		<action name="ajouttopo"
			class="org.climbing.action.AjoutTopoAction">
			<result>/jsp/ajout-topo.jsp</result>
		</action>

		<!-- Action "Ajout d'un nouveau site" -->
		<action name="ajoutsite"
			class="org.climbing.action.AjoutSiteAction">
			<result>/jsp/ajout-site.jsp</result>
		</action>

		<!-- Action "Ajout d'un nouveau secteur" -->
		<action name="ajoutsecteur"
			class="org.climbing.action.AjoutSectorAction">
			<result>/jsp/ajout-sector.jsp</result>
		</action>

		<!-- Action "Ajout d'une nouvelle ligne" -->
		<action name="ajoutligne"
			class="org.climbing.action.AjoutRouteAction">
			<result>/jsp/ajout-route.jsp</result>
		</action>

		<!-- Action "connexion -->
		<action name="connexion"
			class="org.climbing.action.LoginAction" method="input">
			<result name="input">/jsp/connexion.jsp</result>
		</action>

		<action name="login" class="org.climbing.action.LoginAction">
			<result name="input">/jsp/connexion.jsp</result>
			<result name="success">/jsp/home.jsp</result>
		</action>

	</package>

</struts>