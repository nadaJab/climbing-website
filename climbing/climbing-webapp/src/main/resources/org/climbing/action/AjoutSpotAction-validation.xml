<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>

	<validator type="requiredstring">
		<param name="fieldName">spotBean.spotName</param>
		<message>Le nom du site est obligatoire.</message>
	</validator>
	<!--  
	<validator type="requiredstring">
		<param name="fieldName">spotBean.nbRouteTotal</param>
		<message>Le nombre de routes totales est obligatoire.</message>
	</validator>-->

	<validator type="int">
		<param name="fieldName">spotBean.nbRoutesTotal</param>
		<param name="min">1</param>
		<message>Entrez un nombre.</message>
	</validator>	
	
	<validator type="requiredstring">
		<param name="fieldName">spotBean.cotationMin</param>
		<message>La cotation minimale est obligatoire.</message>
	</validator>
	
	<validator type="requiredstring">
		<param name="fieldName">spotBean.cotationMax</param>
		<message>La cotation maximale est obligatoire.</message>
	</validator>
	
	<validator type="requiredstring">
		<param name="fieldName">spotBean.orientation</param>
		<message>L'orientation est obligatoire.</message>
	</validator>
	
	<validator type="requiredstring">
		<param name="fieldName">spotBean.climbingType</param>
		<message>Le type de grimpe est obligatoire.</message>
	</validator>
	
	<validator type="requiredstring">
		<param name="fieldName">countryBean.cityName</param>
		<message>La ville est obligatoire.</message>
	</validator>
	
	<validator type="requiredstring">
		<param name="fieldName">countryBean.countryName</param>
		<message>Le pays est obligatoire.</message>
	</validator>
</validators>