<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE xml>

<configuration  status="DEBUG">
	<appenders>
		<File name="fichierLog" fileName="${catalina.home}/logs/all.log">
			<PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} %highlight{%-5level} [%t] %c : %m%n" />
		</File>

		 <Console name="STDOUT">
            <PatternLayout pattern="%highlight{%-5level} [%t] %c : %m%n"/>
		</Console>
	</appenders>

	<loggers>
		<!--  	
		<Logger name="com.opensymphony.xwork2.*" level="debug">
			<AppenderRef ref="fichierLog" />
		</Logger>
		
		<Logger name="org.apache.struts2.*" level="debug">
			<AppenderRef ref="fichierLog" />
		</Logger>
		
		<Logger name="org.climbing.*" level="debug">
			<AppenderRef ref="fichierLog" />
			<AppenderRef ref="STDOUT"/>
		</Logger> -->
		
		<root level="debug">
			<Appender-ref ref="fichierLog" />
			<Appender-ref ref="STDOUT" />
		</root>
		
	</loggers>
	
</configuration>