<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <package name="default" extends="struts-default">
    
        <!-- Action par dÃ©faut -->
        <default-action-ref name="home" />

        <!-- Action "index" -->
        <action name="home" class="action.HomeAction">
            <result>/jsp/home.jsp</result>
        </action>
        
        <!-- Action "inscription" -->
        <action name="inscription" class="action.InscriptionAction">
        
            <result>/jsp/inscription.jsp</result>
            <!--  
            <result name="success" type="redirectAction">thankyou.jsp</result>
            -->
        </action>
        
        <!-- Action "Ajout d'un topo" -->
        <action name="ajouttopo" class="action.AjoutTopoAction">
            <result>/jsp/ajout-topo.jsp</result>
        </action>
        
        <!-- Action "Ajout d'un nouveau site" -->
        <action name="ajoutsite" class="action.AjoutSiteAction">
            <result>/jsp/ajout-site.jsp</result>
        </action>
        
        <!-- Action "Ajout d'un nouveau secteur" -->
        <action name="ajoutsecteur" class="action.AjoutSectorAction">
            <result>/jsp/ajout-sector.jsp</result>
        </action>
        
         <!-- Action "Ajout d'une nouvelle ligne" -->
        <action name="ajoutligne" class="action.AjoutRouteAction">
            <result>/jsp/ajout-route.jsp</result>
        </action>
        
        <!-- Action "connexion -->
        <action name="connexion" class="action.LoginAction">
        	<result>/jsp/connexion.jsp</result>        	
        </action>
        
    </package>
    
</struts>