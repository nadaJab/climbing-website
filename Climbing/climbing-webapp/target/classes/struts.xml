<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="default" extends="struts-default">
    
        <!-- Action par dÃ©faut -->
        <default-action-ref name="index" />

        <!-- Action "index" -->
        <action name="home">
            <result>/jsp/Home.jsp</result>
        </action>
        
        <!-- Action "inscription" -->
        <action name="inscription" class="action.InscriptionAction">
            <result>/jsp/Inscription.jsp</result>
        </action>
        
        <!-- Action "Ajout d'un topo" -->
        <action name="ajout-topo" class="action.AjoutTopoAction">
            <result>/jsp/AjoutTopo.jsp</result>
        </action>
        
        <!-- Action "Ajout d'un nouveau site" -->
        <action name="ajoutsite" class="action.AjoutSiteAction">
            <result>/jsp/AjoutSite.jsp</result>
        </action>
        
        <!-- Action "Ajout d'un nouveau secteur" -->
        <action name="ajoutsecteur" class="action.AjoutSectorAction">
            <result>/jsp/AjoutSector.jsp</result>
        </action>
        
         <!-- Action "Ajout d'une nouvelle ligne" -->
        <action name="ajoutligne" class="action.AjoutRouteAction">
            <result>/jsp/AjoutRoute.jsp</result>
        </action>
        
    </package>
    
</struts>